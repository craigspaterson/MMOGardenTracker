  "components": {
    "schemas": {
      "Activities": {
        "type": "string",
        "description": "Enum Activities",
        "enum": [
          "sowing",
          "soaking",
          "germinating",
          "transplanting",
          "cloning",
          "watering",
          "fertilizing",
          "weeding",
          "controllingPests",
          "controllingDisease",
          "thinning",
          "pruning",
          "harvesting"
        ]
      },
      "CropActivity": {
        "required": [
          "activityDate"
        ],
        "type": "object",
        "properties": {
          "cropActivityId": {
            "type": "integer",
            "description": "Gets or sets the crop activity identifier.",
            "format": "int32"
          },
          "cropId": {
            "type": "integer",
            "description": "Gets or sets the crop identifier.",
            "format": "int32"
          },
          "activityType": {
            "$ref": "#/components/schemas/Activities"
          },
          "activityDate": {
            "type": "string",
            "description": "Gets or sets the activity date.",
            "format": "date-time"
          },
          "notes": {
            "maxLength": 255,
            "type": "string",
            "description": "Gets or sets the notes.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Class CropActivity."
      },
      "Crop": {
        "required": [
          "beginDate",
          "cropName",
          "plantName"
        ],
        "type": "object",
        "properties": {
          "gardenId": {
            "type": "integer",
            "description": "Gets or sets the garden identifier.",
            "format": "int32"
          },
          "cropId": {
            "type": "integer",
            "description": "Gets or sets the crop identifier.",
            "format": "int32"
          },
          "cropName": {
            "maxLength": 60,
            "type": "string",
            "description": "Gets or sets the name of the crop."
          },
          "plantName": {
            "maxLength": 60,
            "type": "string",
            "description": "Gets or sets the name of the plant."
          },
          "beginDate": {
            "type": "string",
            "description": "Gets or sets the begin date.",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "description": "Gets or sets the end date.",
            "format": "date-time",
            "nullable": true
          },
          "notes": {
            "maxLength": 255,
            "type": "string",
            "description": "Gets or sets the notes.",
            "nullable": true
          },
          "cropActivities": {
            "type": "array",
            "description": "Gets or sets the crop activities.",
            "nullable": true,
            "items": {
              "$ref": "#/components/schemas/CropActivity"
            }
          }
        },
        "additionalProperties": false,
        "description": "Class Crop."
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "Garden": {
        "required": [
          "gardenName"
        ],
        "type": "object",
        "properties": {
          "gardenId": {
            "type": "integer",
            "description": "Gets or sets the garden identifier.",
            "format": "int32"
          },
          "gardenName": {
            "maxLength": 60,
            "type": "string",
            "description": "Gets or sets the name of the garden."
          },
          "crops": {
            "type": "array",
            "description": "Gets or sets the crops.",
            "nullable": true,
            "items": {
              "$ref": "#/components/schemas/Crop"
            }
          }
        },
        "additionalProperties": false,
        "description": "Class Garden."
      }
    }
